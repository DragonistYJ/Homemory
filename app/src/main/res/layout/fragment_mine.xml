<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context=".Fragment.Mine">

    <com.example.dragonist.homemory.View.CircleView
        android:id="@+id/portrait"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/portrait"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="设置"
        android:background="@drawable/frame_gray"/>

    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvSetting"
        android:gravity="center"
        android:text="通知"
        android:background="@drawable/frame_gray"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portrait"
        android:layout_centerHorizontal="true"
        android:text="余坚"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/ivAdministrator"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:src="@drawable/mine_administrator"
        android:layout_toRightOf="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="年龄：18岁"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="性别：男"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sex"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="出生年月：1999年3月28日"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="所在地：四川省成都市"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/hometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="家乡：浙江绍兴"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tvFamilyInformation"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/hometown"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:text="家庭信息"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/frame_gray"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvSecedeFamily"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:layout_below="@+id/tvFamilyInformation"
        android:layout_centerHorizontal="true"
        android:text="退出家庭"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/frame_gray"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvCreateFamily"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:layout_below="@+id/hometown"
        android:layout_centerHorizontal="true"
        android:text="创建家庭"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/frame_gray"/>

    <TextView
        android:id="@+id/tvJoinFamily"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:layout_below="@+id/tvCreateFamily"
        android:layout_centerHorizontal="true"
        android:text="加入家庭"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/frame_gray"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/archives"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="档案管理员积分：65分"
        android:textSize="20sp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/archives"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mine_archives"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Family_Stroll">

    <HorizontalScrollView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bg1"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg1" />
            <ImageView
                android:id="@+id/bg2"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg2"/>
            <ImageView
                android:id="@+id/bg3"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg3"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvBegin"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="开始漫步"
        android:background="@drawable/frame_gray"/>


    <ImageView
        android:id="@+id/peoplecation"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:src="@drawable/action"/>

    <ImageView
        android:id="@+id/ivRemind"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/redremind"
        android:visibility="invisible"/>
    
    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:background="#48ba"
        android:src="@drawable/action"
        android:visibility="invisible"/>
</RelativeLayout>
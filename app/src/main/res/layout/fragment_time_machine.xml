<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Time_Machine">

    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:background="#e2e3e3"/>

    <ScrollView
        android:id="@+id/sv_year"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_below="@+id/bt_year"
        android:layout_alignLeft="@+id/bt_year"
        android:layout_marginTop="2dp"
        android:fillViewport="true">
        <ListView
            android:id="@+id/lv_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </ScrollView>

    <Button
        android:id="@+id/bt_month"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:text="9"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="@drawable/btn_circle"/>

    <ScrollView
        android:id="@+id/sv_month"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/bt_month"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:fillViewport="true">
        <ListView
            android:id="@+id/lv_month"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </ScrollView>

    <Button
        android:id="@+id/bt_year"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="2018"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/btn_rectangle"/>
    
    <Button
        android:id="@+id/bt_personalBill"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:text="个人账单"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:background="@drawable/btn_rectangle"/>
    
    <Button
        android:id="@+id/bt_familyBill"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/bt_personalBill"
        android:text="家庭集体账单"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:background="@drawable/btn_rectangle"/>

    <ScrollView
        android:id="@+id/sv_memory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:fillViewport="true">
        <ListView
            android:id="@+id/lv_memory"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </ScrollView>

</RelativeLayout>
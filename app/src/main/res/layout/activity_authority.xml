<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Activity.Upload.Authority">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/upload_cancel"/>
        <ImageView
            android:id="@+id/sure"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/upload_sure"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="选择可见范围"
            android:textSize="30sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#D4D4D4"/>

    <RelativeLayout
        android:id="@+id/rl_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/iv_publish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/upload_unchecked"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_publish"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:text="公开"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D4D4D4"/>

    <RelativeLayout
        android:id="@+id/rl_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/iv_personal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/upload_unchecked"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_personal"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:text="仅自己可见"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D4D4D4"/>

    <View
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#D4D4D4"/>

    <RelativeLayout
        android:id="@+id/rl_SomeOneCanSee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:text="部分好友可见"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/iv_CanSee"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/expend"/>
    </RelativeLayout>

    <View
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D4D4D4"/>

    <RelativeLayout
        android:id="@+id/rl_SomeOneCantSee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:text="部分好友不可见"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/iv_CanNotSee"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/expend"/>
    </RelativeLayout>

    <View
        android:id="@+id/third_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D4D4D4"/>
</LinearLayout>